<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rettritun" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rettritun_blue</item>
        <item name="colorPrimaryVariant">@color/light_black</item>
        <item name="colorOnPrimary">@color/light_black</item>
        <item name="colorControlNormal">@color/rettritun_blue_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rettritun_blue</item>
        <item name="colorSecondaryVariant">@color/rettritun_blue_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/CustomActionBarStyle</item>
    </style>

    <!-- Custom Action bar Style -->
    <style name="CustomActionBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/rettritun_blue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>

    </style>

    <style name="info_view_style_1">
        <item name="android:textAppearance">
            @android:style/TextAppearance.Large
        </item>
    </style>

    <style name="info_view_style_2">
        <item name="android:textAppearance">
            @android:style/TextAppearance.Small
        </item>
        <item name="android:textColorLink">#6EB1F8</item>
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="about_card_view">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Medium
        </item>
    </style>

    <style name="about_card_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Large
        </item>

    </style>

    <style name="theme_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#546E7A</item>
        <item name="android:textColorPrimary">#37474F</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Rettritun.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rettritun.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rettritun.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>